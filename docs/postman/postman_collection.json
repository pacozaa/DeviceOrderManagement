    {
      "name": "Submit Order - Small",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    if (response.success && response.data.orderNumber) {",
              "        pm.collectionVariables.set('orderNumber', response.data.orderNumber);",
